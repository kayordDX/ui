{
	"name": "@kayord/ui",
	"private": false,
	"version": "0.8.9",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"test": "npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:unit": "vitest"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./utils": {
			"types": "./dist/utils/index.d.ts",
			"default": "./dist/utils/index.js"
		},
		"./mode-watcher": {
			"types": "./dist/mode-watcher/index.d.ts",
			"default": "./dist/mode-watcher/index.js"
		},
		"./formsnap": {
			"types": "./dist/formsnap/index.d.ts",
			"default": "./dist/formsnap/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"dependencies": {
		"@internationalized/date": "^3.5.2",
		"bits-ui": "^0.21.4",
		"clsx": "^2.1.0",
		"cmdk-sv": "^0.0.17",
		"embla-carousel-svelte": "8.0.2",
		"formsnap": "^1.0.0",
		"lucide-svelte": "^0.372.0",
		"mode-watcher": "^0.3.0",
		"paneforge": "^0.0.4",
		"svelte-headless-table": "^0.18.2",
		"svelte-sonner": "^0.3.22",
		"sveltekit-superforms": "^2.12.5",
		"tailwind-merge": "^2.3.0",
		"tailwind-variants": "^0.2.1",
		"vaul-svelte": "^0.3.0",
		"zod": "^3.22.5"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.2.0",
		"@sveltejs/kit": "^2.5.6",
		"@sveltejs/package": "^2.3.1",
		"@sveltejs/vite-plugin-svelte": "^3.1.0",
		"@testing-library/jest-dom": "^6.4.2",
		"@testing-library/svelte": "^5.0.1",
		"@typescript-eslint/eslint-plugin": "^7.7.0",
		"@typescript-eslint/parser": "^7.7.0",
		"autoprefixer": "^10.4.19",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.37.0",
		"happy-dom": "^14.7.1",
		"postcss": "^8.4.38",
		"postcss-load-config": "^5.0.3",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.3",
		"publint": "^0.2.7",
		"svelte": "^4.2.15",
		"svelte-check": "^3.6.9",
		"tailwindcss": "^3.4.3",
		"tslib": "^2.6.2",
		"typescript": "^5.4.5",
		"vite": "^5.2.9",
		"vitest": "^1.5.0"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"main": "./dist/index.js",
	"type": "module"
}
